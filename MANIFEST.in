# Include documentation
include README.md
include LICENSE

# Include configuration files
recursive-include AIComps *.yaml
recursive-include AIComps *.yml
recursive-include AIComps *.json

# Include package data
recursive-include AIComps/tasks/cores/assets *

# Exclude development and build files
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .DS_Store
global-exclude *.so
global-exclude *.dylib

# Exclude Docker and deployment files
recursive-exclude * Dockerfile*
recursive-exclude * docker-compose*
recursive-exclude * .dockerignore
recursive-exclude * nodemon.json

# Exclude test files if any
recursive-exclude tests *
