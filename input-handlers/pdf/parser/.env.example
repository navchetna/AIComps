# ========================================
# PDF Parser API - Environment Configuration
# ========================================

# ---------------------------------------
# LLM Configuration
# ---------------------------------------
# Enable LLM-based improvements for higher accuracy
USE_LLM=false

# vLLM service URL (Required if USE_LLM=true)
# Example: http://vllm-server:8001/v1
VLLM_URL=

# OpenAI API Key (can be dummy value when using vLLM)
OPENAI_API_KEY=dummy-key-for-vllm

# ---------------------------------------
# OCR Configuration
# ---------------------------------------
# Force OCR processing on all pages (improves quality for scanned PDFs)
FORCE_OCR=false

# ---------------------------------------
# Image Extraction
# ---------------------------------------
# Extract and save images from PDFs
EXTRACT_IMAGE=false

# ---------------------------------------
# Output Configuration
# ---------------------------------------
# Directory where parsed results will be saved
OUTPUT_DIR=/app/outputs

# ---------------------------------------
# Server Configuration
# ---------------------------------------
# Host address to bind the server
HOST=0.0.0.0

# Port number for the API server
PORT=8000

# ========================================
# Example Configurations
# ========================================

# Basic usage (no LLM, no OCR):
# USE_LLM=false
# FORCE_OCR=false
# EXTRACT_IMAGE=false

# High accuracy mode with LLM:
# USE_LLM=true
# VLLM_URL=http://your-vllm-server:8001/v1
# FORCE_OCR=true
# EXTRACT_IMAGE=true

# OCR mode without LLM:
# USE_LLM=false
# FORCE_OCR=true
# EXTRACT_IMAGE=false
